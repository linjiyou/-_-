.ctrl{
  display: flex;
  align-items: center;
  background: #fff;
  height: 100%;
}
.ctrl-item{
 flex: 1;
 text-align: center;
 color: rgba(40,70,60,0.8);
 height: 60rpx;
 display: flex;
 flex-direction: row;
 align-items: center;
 justify-content: center;
}
.ctrl-item .icon{
  margin-right: 12rpx;
  font-size: 32rpx;
}
.ctrl-item text{
  font-size: 32rpx;
  color: rgba(40,70,60,0.8);
}
.comment-content{
text-align: left;
 width: 85%;
 margin-top: 30rpx;

}
.send{
  background: #d43c33;
  position: relative;
  text-align: right;
  bottom: 10rpx;
  color: #fff;
  font-weight: normal;
  left: 40%;
}
.share-btn{
  background-color: #fff;
  color: rgba(40,70,60,0.8);
  padding: 0;
  height: 100%;
  border: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-weight: normal;
  margin-top: -20rpx;
}
.share-btn::after{
  display: none;
}
.share-hover::after{
  border: 0;
}