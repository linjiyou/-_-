.container {
  padding: 20rpx;
}

.content {
  width: 100%;
  height: 300rpx;
  box-sizing: border-box;
}

.footer {
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
  background: #f1f1f1;
}

.words-num {
  flex: 5;
  text-align: right;
  color: #474747;
  font-size: 24rpx;
  margin-right: 20rpx;
}

.send-btn {
  background-color: #d43c33;
  color: #fff;
  margin-right: 20rpx;
  font-weight: normal;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.image-wrap {
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  position: relative;
  overflow: hidden;
  text-align: center;
}

.icon-jiahao {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 50rpx;
}

.selectphoto {
  border: 1px dashed rgba(128, 128, 128, 0.8);
}

.image {
  width: 100%;
  height: 100%;
}

.icon-shanchu1 {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: #000;
  opacity: 0.4;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  font-size: 38rpx;
  font-weight: bolder;
}
