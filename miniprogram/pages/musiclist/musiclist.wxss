/* pages/musiclist/musiclist.wxss */
.detail-container{
  height: 320rpx;
  filter: blur(0);
  opacity: 0.7;
 
}
.detail-mask{
  position: absolute;
  width:100%;
  height: 320rpx;
  background: #333;
  top:0;
  left: 0;
  z-index: -1;
}
.detail-img{
  width: 280rpx;
  height: 280rpx;
  margin-right: 24rpx;
  border-radius: 6rpx;
  position: relative;
  
}
.detail-info{
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 320rpx;
  padding: 20rpx;
  box-sizing: border-box;
  align-content: center;

}
.detail{
  margin-top: 90rpx;
  flex-grow: 1;
  line-height: 60rpx;
  width: 0;

}
.detail view{
  color: #fff;
  font-size: 24rpx;
}
.detail .detail-nm{
  font-size: 36rpx;
  font-weight: 400;
}
